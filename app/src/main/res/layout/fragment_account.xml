                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/manage_your_wallet"
                        android:textColor="@color/disabled"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
