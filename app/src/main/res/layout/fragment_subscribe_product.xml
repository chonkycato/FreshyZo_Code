<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubscribeProductFragment"
    android:background="@color/background"
    android:paddingHorizontal="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav_prod_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:theme="?actionBarTheme"
            android:background="@color/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/back_icon_prod_subscription"
            android:contentDescription="@string/back_button"
            android:background="@drawable/icon_pointer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="4dp"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_icon_prod_subscription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:text="@string/subscribe"
            android:textSize="18sp"
            android:textColor="@color/body"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            />

        <ImageView
            android:id="@+id/cart_icon_sub"
            android:contentDescription="@string/cart_icon"
            android:src="@drawable/icon_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="2dp"/>


        <!-- Search View -->

<!--        <android.widget.SearchView-->
<!--            android:id="@+id/searchView_not"-->
<!--            android:contentDescription="@string/search_icon"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="right"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toStartOf="@id/cart_icon_sub"-->
<!--            android:outlineAmbientShadowColor="@color/primary"-->
<!--            android:padding="4dp"-->
<!--            android:queryHint="Search"-->
<!--            android:iconifiedByDefault="true"-->
<!--            android:searchIcon="@drawable/icon_search"-->
<!--            android:theme="@style/ToolbarAppearanceOverlay"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_nav_prod_subscription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_nav_prod_subscription">

            <!-- Main container -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/productImageSub"
                    android:layout_width="wrap_content"
                    android:layout_height="260dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="72dp"
                    android:contentDescription="@string/product_image"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="20dp"
                    android:src="@drawable/img_dahi"
                    app:layout_constraintBottom_toTopOf="@id/product_title_sub"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/product_title_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/freshyzo_malai_dahi"
                    android:textColor="@color/heading"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productImageSub"/>

                <!-- Price Unit Layout -->

                <LinearLayout
                    android:id="@+id/price_unit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_title_sub">

                    <TextView
                        android:id="@+id/product_price_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/mrp"
                        android:textColor="@color/heading"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_per_unit_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/price_per_unit"
                        android:textColor="@color/disabled"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Subscription Type Layout -->

                <LinearLayout
                    android:id="@+id/sub_type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/price_unit_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/daily_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:text="@string/daily"
                        android:textColor="@color/background"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/custom_rounded_corner_primary"
                        tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                    <Button
                        android:id="@+id/weekly_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:text="@string/weekly"
                        android:textColor="@color/body"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/custom_rounded_corner_primary_outline"
                        tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                    <Button
                        android:id="@+id/monthly_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:text="@string/monthly"
                        android:textColor="@color/body"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/custom_rounded_corner_primary_outline"
                        tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                </LinearLayout>

                <!-- Layout Container -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sub_type_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/disabled_light"
                        android:layout_marginVertical="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <!-- Daily Sub Layout -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/dailyConstLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="28dp"
                        android:visibility="visible">

                        <!-- Quantity Layout -->

                        <LinearLayout
                            android:id="@+id/quantity_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginVertical="22dp">

                            <TextView
                                android:id="@+id/select_qty_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:text="@string/quantity"
                                android:textColor="@color/body"
                                android:textSize="16sp"
                                android:fontFamily="@font/roboto_medium"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/select_qty_title"
                                app:layout_constraintEnd_toEndOf="parent">

                                <Button
                                    android:id="@+id/quantity_decrement_btn"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@drawable/custom_rounded_corner_primary_outline"
                                    android:padding="4dp"
                                    android:text="@string/minus_sign"
                                    android:textColor="@color/body"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:includeFontPadding="false"
                                    tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                                <TextView
                                    android:id="@+id/quantity_display_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/one"
                                    android:textSize="16sp"
                                    android:textColor="@color/body"
                                    android:layout_marginHorizontal="16dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:includeFontPadding="false"/>

                                <Button
                                    android:id="@+id/quantity_increment_btn"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@drawable/custom_rounded_corner_primary_outline"
                                    android:padding="4dp"
                                    android:text="@string/plus_sign"
                                    android:textColor="@color/body"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:includeFontPadding="false"
                                    tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Delivery Layout -->

                        <LinearLayout
                            android:id="@+id/delivery_type_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/quantity_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            android:paddingVertical="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/delivery_type_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="32dp"
                                android:text="@string/delivery_type"
                                android:textColor="@color/body"
                                android:textSize="15sp"
                                android:fontFamily="@font/roboto_medium" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <Spinner
                                android:id="@+id/deliveryTypeSpinner"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="16dp"
                                android:textAlignment="viewStart"
                                android:spinnerMode="dropdown"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="14dp"
                                android:dropDownSelector="@color/primary"
                                android:defaultFocusHighlightEnabled="true"
                                android:outlineProvider="bounds"
                                android:dropDownWidth="match_parent"
                                android:background="@drawable/custom_outline_primary"
                                android:contentDescription="@string/delivery_type"
                                android:textColor="@color/body"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Weekly Sub Layout -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/weeklyConstLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/select_weekdays_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="20dp"
                            android:text="@string/select_week_days_title"
                            android:textColor="@color/body"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_medium"/>

                        <!-- Days of Week Layout -->

                        <LinearLayout
                            android:id="@+id/daysOfWeekLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/select_weekdays_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:orientation="horizontal"
                            android:layout_marginVertical="20dp">

                            <Button
                                android:id="@+id/sundayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/sun"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle, TouchTargetSizeCheck"/>

                            <Button
                                android:id="@+id/mondayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                android:padding="4dp"
                                android:text="@string/monday"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/tuesdayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/tue"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                            <Button
                                android:id="@+id/wednesdayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/wed"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                            <Button
                                android:id="@+id/thursdayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/thu"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                            <Button
                                android:id="@+id/fridayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/fri"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

                            <Button
                                android:id="@+id/saturdayBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/custom_button_shadow_light"
                                android:padding="4dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/sat"
                                android:textAllCaps="true"
                                android:textColor="@color/disabled"
                                android:textSize="11sp"
                                android:fontFamily="@font/roboto_bold"
                                android:includeFontPadding="false"
                                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>


                        </LinearLayout>

                        <!-- Week days quantity layout -->

                        <LinearLayout
                            android:id="@+id/weekDaysQuantityLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/daysOfWeekLayout"
                            android:layout_marginVertical="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/days"
                                android:textColor="@color/body"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quantity"
                                android:textColor="@color/body"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_gravity="end"/>

                        </LinearLayout>

                        <!-- Weekly quantity container -->

                        <LinearLayout
                            android:id="@+id/weeklyQuantityContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/weekDaysQuantityLayout"
                            android:orientation="vertical"
                            android:layout_marginVertical="20dp">

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Monthly Sub Layout -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/monthlyConstLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/select_monthdays_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="20dp"
                            android:text="@string/add_delivery_days_title"
                            android:textColor="@color/body"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_medium"/>

                        <Button
                            android:id="@+id/addDate"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginVertical="20dp"
                            android:text="@string/add"
                            android:textColor="@color/background"
                            android:background="@color/primary"
                            android:fontFamily="@font/roboto_medium"
                            android:includeFontPadding="false"
                            tools:ignore="ButtonStyle,TouchTargetSizeCheck"
                            />

                        <EditText
                            android:id="@+id/monthlyDatePickerET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/select_monthdays_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="16dp"
                            android:calendarTextColor="@color/primary"
                            android:hint="@string/enter_date"
                            android:textColorHint="@color/disabled"
                            android:textColor="@color/body"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_regular"
                            android:includeFontPadding="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>


                        <TextView
                            android:id="@+id/add_Quantity_monthly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/monthlyDatePickerET"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="20dp"
                            android:text="@string/add_quantity"
                            android:textColor="@color/body"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_medium"/>

                        <!-- Monthly Days Quantity Layout -->

                        <LinearLayout
                            android:id="@+id/monthlyDaysQuantityLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/add_Quantity_monthly"
                            android:layout_marginVertical="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textColor="@color/body"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quantity"
                                android:textColor="@color/body"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_gravity="end"/>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Date Picker Layout -->

                <LinearLayout
                    android:id="@+id/datePickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/container"
                    android:layout_marginTop="0dp"
                    android:paddingTop="16dp"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/startSubLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/select_start_date_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_start_date"
                            android:textColor="@color/body"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/required"
                            android:textColor="@color/disabled"
                            android:textSize="11sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <EditText
                            android:id="@+id/startDatePickerET"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="16dp"
                            android:padding="8dp"
                            android:calendarTextColor="@color/primary"
                            android:hint="@string/enter_date"
                            android:textColorHint="@color/disabled"
                            android:textColor="@color/body"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:includeFontPadding="false"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/custom_outline_primary"
                            android:drawableStart="@drawable/icon_calendar_one"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/primary"
                            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/endSubLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp">

                        <TextView
                            android:id="@+id/select_end_date_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_end_date"
                            android:textColor="@color/body"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/optional"
                            android:textColor="@color/disabled"
                            android:textSize="11sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <EditText
                            android:id="@+id/endDatePickerET"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:padding="8dp"
                            android:calendarTextColor="@color/primary"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/enter_date"
                            android:includeFontPadding="false"
                            android:textColor="@color/body"
                            android:textColorHint="@color/disabled"
                            android:textSize="14sp"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableStart="@drawable/icon_calendar_one"
                            android:drawableTint="@color/primary"
                            android:drawablePadding="8dp"
                            android:background="@drawable/custom_outline_primary"
                            tools:ignore="ButtonStyle,TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/subscribeBtnSub"
                android:layout_width="120dp"
                android:layout_height="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_container"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/subscribe"
                android:textSize="12sp"
                android:textColor="@color/background"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:background="@drawable/custom_small_rounded_corner_primary"
                tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>