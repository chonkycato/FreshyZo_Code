    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_nav_address"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_address"
            android:textColor="@color/body"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Address Field -->
        <EditText
            android:id="@+id/address_field"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/enter_your_address"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@drawable/custom_outline_lighter"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:textColorHint="@color/disabled"
            android:textColor="@color/body"
            android:gravity="top|start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_your_area"
            android:textColor="@color/body"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="22dp"/>

        <!-- Area Selection Field -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_outline_lighter"
            android:drawableRight="@drawable/icon_drop_down_arrow"
            android:drawableTint="@color/body"
            android:layout_marginBottom="16dp">

        <Spinner
            android:id="@+id/area_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"/>

        </FrameLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitChanges_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_small_rounded_corner_primary"
            android:text="@string/save"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

