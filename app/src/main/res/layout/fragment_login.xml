<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="200dp"
            android:contentDescription="@string/FreshyZo"
            android:padding="28dp"
            android:src="@drawable/logo_freshyzo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/off_white"
            android:orientation="vertical"
            android:padding="30dp">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_rounded_corner"
                android:clickable="true"
                android:contentDescription="@string/loginButton"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="28dp"
                android:paddingVertical="18dp"
                android:text="@string/signup"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:autofillHints="phone"
                android:background="@drawable/custom_edditext_border"
                android:hint="@string/phoneHint"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="@color/heading_black"
                android:textColorHint="@color/disabled"
                tools:ignore="TextContrastCheck" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/OTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:autofillHints="OTP"
                    android:background="@drawable/custom_edditext_border"
                    android:hint="@string/otpHint"
                    android:inputType="numberPassword"
                    android:padding="16dp"
                    android:textColor="@color/secondary"
                    android:textColorHint="@color/disabled"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/getOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/getOTP"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/getOTP"
                    android:textColor="@color/secondary"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap,TextContrastCheck" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>