<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_marginBottom="16dp">

    <TextView
    android:id="@+id/delivery_day_weekly_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="@color/body"
    android:textSize="15sp"
    android:fontFamily="@font/roboto_regular" />


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginVertical="20dp">

        <Button
            android:id="@+id/quantity_decrement_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/custom_rounded_corner_primary_outline"
            android:padding="4dp"
            android:text="@string/minus_sign"
            android:textColor="@color/body"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

        <TextView
            android:id="@+id/quantity_display_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="18sp"
            android:textColor="@color/body"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"/>

        <Button
            android:id="@+id/quantity_increment_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/custom_rounded_corner_primary_outline"
            android:padding="4dp"
            android:text="@string/plus_sign"
            android:textColor="@color/body"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>