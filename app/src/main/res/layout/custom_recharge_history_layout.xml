<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        android:padding="16dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvRechargeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recharge_id"
            android:textColor="@color/body"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvRechargeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_string"
            android:textColor="@color/body"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium" />
    </LinearLayout>

    <!-- Recharge Date -->
    <TextView
        android:id="@+id/tvRechargeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_date"
        android:textColor="@color/disabled"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRechargeAmount"
        app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

