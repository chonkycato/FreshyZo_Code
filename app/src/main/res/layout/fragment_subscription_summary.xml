        <TextView
            android:id="@+id/insufficientBalanceWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your wallet balance is insufficient, please recharge to continue."
            android:textSize="13sp"
            android:textColor="@color/alert"
            android:fontFamily="@font/roboto_medium"
            android:paddingBottom="16dp"
            android:visibility="gone"/>


        <!-- Confirm Subscription Button -->
        <Button
            android:id="@+id/confirmSubscriptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_subscription"
            android:background="@drawable/custom_small_rounded_corner_primary"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:elevation="2dp"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Recharge Button and text (shown only if insufficient balance) -->


        <Button
            android:id="@+id/rechargeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recharge_wallet"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/background"
            android:paddingVertical="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
