<!-- fragment_subscription_summary.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:theme="?actionBarTheme"
            android:background="@color/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/back_icon_summary"
            android:contentDescription="@string/back_button"
            android:background="@drawable/icon_pointer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="4dp"
            tools:ignore="ButtonStyle,TouchTargetSizeCheck"/>

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_icon_summary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:text="@string/subscription_summary"
            android:textSize="18sp"
            android:textColor="@color/body"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            />

        <ImageView
            android:id="@+id/cart_icon_summary"
            android:contentDescription="@string/cart_icon"
            android:src="@drawable/icon_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Product Information Card -->

    <LinearLayout
        android:id="@+id/productInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_nav_summary"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginVertical="16dp">


        <!-- Product Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/productNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/productNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/milk"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>


        <!-- Product Size -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/productSizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/productSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size_numbers"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>


        <!-- Product Price -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/productPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_per_unit_string"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/productPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_price"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>


        <!-- Product Quantity -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/productQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/productQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>



        <!-- Subscription Type -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/subscriptionTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_type"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subscriptionTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/everyday"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>


        <!-- Subscription Start -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/subscriptionStartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subscriptionStartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_date"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>


        <!-- Subscription End -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/subscriptionEndTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/subscriptionEndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_date"
                android:textSize="14sp"
                android:textColor="@color/body"
                android:paddingTop="4dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>


