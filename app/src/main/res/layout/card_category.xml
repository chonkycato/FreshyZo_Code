<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_box"
    android:layout_width="110dp"
    android:layout_height="68dp"
    android:orientation="horizontal"
    android:layout_marginEnd="8dp"
    android:background="@drawable/custom_rounded_small_corner_primary_outline"
    android:backgroundTint="@color/secondary_tint_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_text_hsv_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:text="@string/all_products_newline"
            android:textSize="15sp"
            android:textColor="@color/body"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginVertical="12dp"
            android:src="@drawable/icon_arrow"/>

    </LinearLayout>

</LinearLayout>

